<div class="parallax-window" data-parallax="scroll" data-position="0px 30px" data-image-src="<%= asset_path 'newspaper_chicago.jpg'%>"></div>
<br>
<div class="container">
  <div class="row"> 
    <h3><a href="/siren"> Click to read THE SIREN</a></p></h3>
    <p class="page-head text-center">100 Club News</p> 
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <%= search_form_for @q, class: '' do |f| %>
          <div class="input-group">
            <%= f.search_field :title_cont, class: 'form-control', placeholder: 'Search News' %>
            <span class="input-group-btn">
            <%= f.submit 'Search', class: 'btn btn-default' %>
            </span>
          </div>
        <% end %>
    </div>
  </div>
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-xs-8 col-xs-offset-2">
        <%= link_to "Add News", 'blog_posts/new', class: 'btn btn-info center-block' %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="row">
    <% @blog_posts.each do |post| %>
      <div class="col-xs-8 col-xs-offset-2 text-center">
        <br>
        <div>
          <%= link_to "#{post.title}", "blog_posts/#{post.id}", class: 'blogPostsIndexHead' %>
        </div>
        <div class="newsBody">
          <%= truncate(post.content, length: 200) %>
        </div>
        <div>
          <%= image_tag post.image.medium, class: 'img-rounded' %>
        </div>
        <br>
      </div>
    <% end %>
  </div>
  <div class="flickr_pagination">
    <%= will_paginate @blog_posts %>
  </div>
</div>
