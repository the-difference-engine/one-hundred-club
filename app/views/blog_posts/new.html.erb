<div class="container">
  <p class="pageHead text-center">Create News Story</p>
  <div class="form-group">
    <%= form_tag '/blog_posts', method: :post, multipart: true do %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= text_field_tag :title, nil, class: 'form-control', placeholder: 'Story Title' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div>
            <%= text_area_tag :content, nil, rows: 10, class: 'form-control', placeholder: 'Story Content' %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div>
            <%= text_field_tag :image, nil, class: 'form-control', placeholder: 'Image URL' %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div>
            <%= submit_tag "Add Story", class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>