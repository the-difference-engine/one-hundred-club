<div ng-app="app">
  <div ng-controller="aboutCtrl">

<div class="container">

  <div class="row"> 

    <h1 class="donations-headers">Donations</h1>

    <br>

    <p>Number of Donations: <%= @donations.length %></p>
    <p>Total Amount Donated: <%= number_to_currency(@total) %></p>

    <br>

    <table id="donations">
      <tr>
        <th id="donation-date">Date</th>
        <th id="donation-name">Name</th>
        <th id="donation-address">Address</th>
        <th id="donation-email">Email</th>
        <th id="donation-phone">Phone</th>
        <th id="donation-donation">Donation</th>
        <th id="donation-donation"></th>
      </tr>

      <% @donations.each do |donation| %>
        <tr>
          <td>
            <%= donation.created_at.strftime("%m/%d/%Y") %>
          </td>
          <td>
            <%= donation.first_name %> <%=donation.last_name %>
          </td>
          <td>
            <% if donation.address %>
              <%= donation.address %> 
            <% end %>
            <% if donation.city %>
              <%= donation.city %>, 
            <% end %>
            <% if donation.state %>
              <%= donation.state %>
            <% end %>
            <% if donation.zip_code %>
              <%= donation.zip_code %>
            <% end %>
          </td>
          <td>
            <% if donation.email != nil %>
              <%= donation.email %>
            <% end %>
          </td>
          <td>
            <% if donation.phone_number != nil %>
              <%= donation.phone_number %>
            <% end %>
          </td>
          <td>
            $<%= donation.amount %>
          </td>
          <td>
            $<%= donation.amount %>
          </td>
          <td>
            <% if user_signed_in? %>
        <a href="/donations/<%= donation.id %>">View</a>
      <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <br>
  </div>
</div>  

	</div>
</div>