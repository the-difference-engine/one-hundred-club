<div class="container">
  <div class="row">
  <h1 class="members-headers"><%= @member.title %> <%= @member.first_name %> <%= @member.middle_name %>
                              <%= @member.last_name %> <%= @member.suffix %></h1>
  </div>
  <br>
  <div class="row">
    <h3 class="text-center">Membership Level: <%= @member.level %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">Phone Number: <%= @member.phone_number %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">Email: <%= @member.email %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">Street Address: <%= @member.address %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">City: <%= @member.city %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">Zip Code: <%= @member.zip_code %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">State: <%= @member.state %> </h3>
  </div>
  <div class="row">
    <h3 class="text-center">Country: <%= @member.country %> </h3>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2">
      <%= link_to "Edit Member", "/members/#{@member.id}/edit", method: :get, class: 'btn btn-primary btn-block' %>
    </div>
    <div class="col-xs-4">
      <%= link_to "Delete Member", "/members/#{@member.id}", method: :delete, class: 'btn btn-danger btn-block' %>
    </div>
  </div>
  <br>
</div>
