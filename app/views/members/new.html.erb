<div class="container">

  <div class="row col-lg-12">
    <ul class="pills">
    
      <li class="active"><a data-toggle="pill" href="#menu1">$50-199 Bronze Level </a></li>
      <li><a data-toggle="pill" href="#menu2">$200-499 Silver Level </a></li>
      <li><a data-toggle="pill" href="#menu3">$500-4999 Gold Level </a></li>
      <li><a data-toggle="pill" href="#menu4">$5000 Lifetime Member </a></li>
    </ul>
  
    <div class="tab-content">

      <div id="menu1" class="tab-pane fade">
        <h3>Enter a custom amount between $50-199</h3>
       
      </div>
      <div id="menu2" class="tab-pane fade">
        <h3>Enter a custom amount between $200-499</h3>
    
      </div>
      <div id="menu3" class="tab-pane fade">
        <h3> Enter a custom amount between $500-4999</h3>
        
      </div>
      <div id="menu4" class="tab-pane fade">
        <h3> Enter a custom amount $5000 or higher</h3>
       
      </div>
    </div>
  </div>  
  

  <div class="form-group"> 

  <%= form_tag("/members", method: "post", id: "payment-form") do %>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :amount, "Amount:* " %>
          <%= text_field_tag :amount, nil, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :title, "Title: " %>
          <%= select_tag :title, options_for_select(title), class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :first_name, "First Name:* " %>
          <%= text_field_tag :first_name, nil, class: 'form-control'  %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :middle_name, "Middle Name: " %>
          <%= text_field_tag :middle_name, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>  
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :last_name, "Last Name:* " %>
          <%= text_field_tag :last_name, nil, class: 'form-control'  %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :suffix, "Suffix: " %>
          <%= text_field_tag :suffix, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>  
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :address, "Street Address: " %>
          <%= text_field_tag :address, nil, class: 'form-control'  %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :city, "City: " %>
          <%= text_field_tag :city, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>  
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :state, "State/Province:* " %>
          <%= select_tag :state, options_for_select(us_states), class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :zip_code, "Postal Code:* " %>
          <%= text_field_tag :zip_code, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>  
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :country, "Country:* " %>
          <%= select_tag :country, options_for_select(countries), class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :email, "E-mail:* " %>
          <%= text_field_tag :email, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>  
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= label_tag :phone_number, "Phone:* " %>
          <%= text_field_tag :phone_number, nil, class: 'form-control'  %>
        </div>
      </div>
    </div>
  </div>  
    <script src="https://js.braintreegateway.com/js/braintree-2.27.0.min.js"></script>
    <script>
    // We generated a client token for you so you can test out this code
    // immediately. In a production-ready integration, you will need to
    // generate a client token on your server (see section below).
    var clientToken = "<%= @token %>";

    braintree.setup(clientToken, "dropin", {
      container: "payment-form",
      paypal: {
        button: {
          type: 'checkout'
        }
      }

    });
    </script>
    <button class="btn btn-primary btn-block" type="submit"><span>Create</span></button>
    <br>
  </div>
<% end %>


