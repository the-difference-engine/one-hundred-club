<div class="container">
  <div class="row" class="block-quote-row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <div>
        <h3 class="block-quote">The following is a listing of public safety professionals in Cook County who lost their lives in the line of duty.</h3>
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>

  <div class="row section-heading">
    <div class="col-xs-12 col-sm-4" id="section-heading-text">
      <p id="bold-font" style="display: inline">Fallen Heroes,&nbsp;</p><p style="display: inline">2010-2016</p>
    </div>
    <div class="col-xs-12 col-sm-8" id="section-heading-line">
      <div id="line"></div>
    </div> 
  </div>

  <div id="new-fallen-hero-button">
    <%= button_to "Add New Fallen Hero", "/fallen_heroes/new", method: :get, :class => 'btn btn-small' %>
  </div>
</div>
<div class="container">  
  <% @fallen_heroes.each_slice(3) do |heroes| %> 
    <div class="row">
      <% heroes.each do |hero| %>  
        <div class="col-md-3" id="pad-right">
          <div class="hero-box">
            <div class="hero-name">
              <img src="<%= hero.image_url %>" /><%= hero.first_name %> <%= hero.last_name %>
            </div>
            <hr />
            <div class="hero-body text-left">
              <h5><%= hero.rank %></h5>
              <p><%= hero.department %></p>
              <p class="date"><%= hero.date_deceased.strftime("%m/%d/%Y")%></p>              
              <p><%= hero.description.truncate(160) %>..</p>
              <%= button_to "Read more", "/fallen_heroes/{#hero.id}", method: :get, class:"btn-small", id:"center-button"%>
            </div>  
          </div>
        </div>
      <% end %>  
    </div>
  <% end %>
</div>