<div class ="container">
  <div class="well" id="hero-show-well">
    <h2><%= @fallen_hero.rank + " " + @fallen_hero.full_name %></h2>
    <h3><%= @fallen_hero.department %></h3>
    <h3><%= @fallen_hero.date_deceased.to_datetime.strftime("%m/%d/%Y")%></h3>
    <div id="hero-badge-img">
      <%= image_tag @fallen_hero.image_url || 'original_logo.png', id:"showbadge" %>
    </div>
    <p><%= @fallen_hero.description %></p>
    <% if user_signed_in? %>
      <div class="row">
          <div class="col-xs-4 col-xs-offset-2">
            <%= link_to "Edit Fallen Hero", "/fallen_heroes/#{@fallen_hero.id}/edit", method: :get, class: 'btn btn-primary btn-block' %>
          </div>
          <div class="col-xs-4">
            <%= button_to "Delete Fallen Hero", "/fallen_heroes/#{@fallen_hero.id}", method: :delete, class: 'btn btn-danger btn-block' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
