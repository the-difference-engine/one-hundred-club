<h1>Add a new fallen hero</h1>
<%= form_tag '/fallen_heroes/create', method: :post do %>

  <% if @fallen_heroes.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fallen_heroes.errors.count, "error") %> prohibited this fallen hero from being saved to the database:</h2>
   
      <ul>
      <% @fallen_heroes.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :rank %>
    <%= text_field_tag :rank %>
  </div>    
  <div class="form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>    
  <div class="form-group">
    <%= label_tag :middle_name %>
    <%= text_field_tag :middle_name %>
  </div>  
  <div class="form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <div class="form-group">
    <%= label_tag :date_deceased %>
    <%= text_field_tag :date_deceased %>
  </div>
   <div class="form-group">
    <%= label_tag :department %>
    <%= text_field_tag :department %>
  </div>
    <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description %>
    </div> 
  <div class="form-group">
    <%= label_tag :image_url %>
    <%= text_field_tag :image_url %>
  </div>
  <div>
    <%= submit_tag "Add Fallen Hero", class: "btn btn-default" %>
  </div>
<% end %>