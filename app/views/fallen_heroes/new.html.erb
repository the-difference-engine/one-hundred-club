<div class="container">
  <% if @fallen_hero.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@fallen_hero.errors.count, "error") %> 
          prohibited this hero from being submitted:</h2>

        <ul>
        <% @fallen_hero.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <p class="page-head text-center">Add Fallen Hero</p>
  <div class="form-group">
    <%= form_tag '/fallen_heroes', method: :post, multipart: true do %>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :rank, "Rank: "  %>
          <%= text_field_tag :rank, nil, class: 'form-control', placeholder: 'Rank' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :first_name, "First Name: " %>
          <%= text_field_tag :first_name, nil, class: 'form-control', placeholder: 'First Name' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :middle_name, "Middle Name: " %>
          <%= text_field_tag :middle_name, nil, class: 'form-control', placeholder: 'Middle Name' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :last_name, "Last Name: " %>
          <%= text_field_tag :last_name, nil, class: 'form-control', placeholder: 'Last Name' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :date_deceased, "Date Deceased: " %>
          <%= date_field_tag :date_deceased, nil, class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :fallen_hero_image_id, "Department: " %>
          <%= collection_select( nil, :fallen_hero_image_id, FallenHeroImage.all, :id, :department, {include_blank: true}) %>
          <p class="smalltype">If this is a new department, <a href="/fallen_heroes/badge_uploader">upload that first here.</a></p> 
          </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= label_tag :description, "Description: " %>
          <%= text_area_tag :description, nil, rows: 10, class: 'form-control', placeholder: 'Description' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <%= submit_tag "Add Fallen Hero", class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
