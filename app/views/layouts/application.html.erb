<!DOCTYPE html>
<html>
<head>
  <title>OneHundredClub</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <!-- Banner -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12" id="bannerDiv">
      <br>
        <h4 id="logoText"> <img id="logo" src="<%= asset_path 'original_logo.png' %>">100 Club of Chicago
          <img class="img-responsive socialTop" src="<%= asset_path 'facebook_social.png' %>">
          <img class="img-responsive socialTop" src="<%= asset_path 'instagram_social.png' %>">
          <img class="img-responsive socialTop" src="<%= asset_path 'youtube_social.png' %>">
        </h4>
      </div>
    </div>
  </div>
  <hr>
  <!-- End Banner -->
  <!-- NavBar -->
  <div class="container">
    <div class="col-lg-12">
      <ul class="nav nav-justified">
        <li class="navLinks" id="home"> Home </li>
        <li class="navLinks"> About </li>
        <li class="navLinks"> Heroes </li>
        <li class="navLinks"> Programs </li>
        <li class="navLinks"> Join </li>
        <li class="navLinks"> Supporters </li>
        <li class="navLinks"> Events </li>
        <li class="navLinks"> News </li>
        <li class="navLinks" id="donate"> Donate </li>
      </ul>
    </div>
  </div>
  <br>
  <!-- End Navbar -->

  <%= yield %>
  
  <!-- FOOTER -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="text-center icon-margines">
          <ul class="list-inline" id="footer-icons">
            <li><a target="_blank" href="https://www.facebook.com/100clubofchicago"><%= image_tag 'facebook_white_bubble.png' %></a></li>
            <li><a target="_blank" href="https://www.instagram.com/100clubchicago/?ref=badge"><%= image_tag 'Instagram_white_bubble.png' %></a></li>
            <li><a target="_blank" href="https://www.youtube.com/user/100ClubChicago"><%= image_tag 'youtube_white_bubble.png' %></a></li>
          </ul>  
        </div>
        <div class="text-center footer-links">
          <ul class="list-inline">
            <li><a href="">About</a></li>
            <li><a href="/programs">Programs</a></li>
            <li><a href="/events">Events</a></li>
            <li><a href="">News</a></li>
            <li><a href="">Supporters</a></li>
          </ul>   
        </div>  
        <div class="text-center">
          <a href="/donations/new">Donate </a>|<a href="/members/new"> Join </a>|<a href=""> Contact</a>
        </div>
        <div class="text-center">    
          <p>
            Â©2016 by 100 Club of Chicago. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </footer>
  <!-- END FOOTER -->
</body>
</html>
