<div class="container">

  <div class="row">

    <h1 class="members-headers">Donors and Members</h1>

    <br>

<table id="donors_and_members">
  <tr>
    <th id="member-name">Name</th>
    <th id="member-address">Address</th>
    <th id="member-email">Email</th>
    <th id="member-phone">Phone</th>
    <th id="member-donation">Level</th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td>
      <%= member.first_name %> <%= member.last_name %>
    </td>
    <td>
      <%= member.address %> 
      <%= member.city %>, 
      <%= member.state %>
      <%= member.zip_code %>
    </td>
    <td>
      <% if member.email != nil %>
        <%= member.email %>
      <% end %>
    </td>
    <td>
      <% if member.phone_number != nil %>
        <%= member.phone_number %>
      <% end %>
    </td>
    <td>
      <%= member.level %>
    </td>
  </tr>
<% end %>

<% @donors.each do |donor| %>
  <tr>
    <td>
      <%= donor.first_name %> <%= donor.last_name %>
    </td>
    <td>
      <%= donor.address %> 
      <%= donor.city %>, 
      <%= donor.state %>
      <%= donor.zip_code %>
    </td>
    <td>
      <% if donor.email != nil %>
        <%= donor.email %>
      <% end %>
    </td>
    <td>
      <% if donor.phone_number != nil %>
        <%= donor.phone_number %>
      <% end %>
    </td>
    <td>
      <%= donor.amount %>
    </td>
    <td>
      <%= donor.member_id.level %>
    </td>
  </tr>
<% end %>

    </table>

    </div>

    </div>