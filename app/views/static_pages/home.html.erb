<!-- Jumbotron -->
<div class="jumbotron" id="jumbotronGif">
  <div class="container">
    <p id="homeJumbotronText">Give a Little. Change a Lot.</p>
    <p id="jumbotronTextMini">Together providing for families of fallen heroes since 1952</p>
    <div class="text-center">
      <a href="/members/new"><button type="button" class="btn btn-lg joinDonate"> Join us </button></a>
      <a href="/donations/new"><button type="button" class="btn btn-lg joinDonate"> Donate </button></a>
    </div>
  </div>
</div>
<br>
<!-- End Jumbotron -->

<!-- News and Events -->
<div class="container">

<div class="top-boxes">
    <div class="home_news">
      <div>
        <p class="miniheading">Events</p>
        <div id="events-line"></div>
        <a href="/events" id="nounderline" class="inline"><button type="button" class="read-more center-block" id="news-button">View all</button></a>
      </div>

      <div class="row">
        <% @events.each do |event| %>
          <div class="col-sm-6">
            <div class="col-sm-6 well" id="well-news">
              <%= image_tag event.image, class:"wellImg" %>
              <br>
              <p class="wellDate"><%= event.datetime.strftime("%b %d, %Y") %></p><br>
              <div class="event_info">
                <p><a href="/events/<%= event.id %>" class="event-heading"><%= event.title %></a></p>
                <p class="text-center"><%= image_tag("Locator.png", :size => "15x20") %> <%= event.location %></p>
              </div>
              <p class="wellBody"><%=event.description.truncate(99)%> <a class="readMore" href="/events/<%=event.id%>">Read More</a></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="home_events">
      <div>
        <p class="miniheading">News</p>
        <div id="news-line"></div>
        <a href="/blog_posts" id="nounderline" class="inline"><button type="button" class="read-more center-block" id="news-button">View all</button></a>
      </div>
      
      <div class="row">
        <div class="col-sm-6">
          <div class="col-sm-6 well" id="well-news">
            <% @recent_news.each do |blog_post| %>
              <h4 class="news-title"> <%= blog_post.title %> </h4>
              <p class="newsText"> <%= blog_post.content.truncate(110) %><a class="readMore" href="/blog_posts/<%=blog_post.id%>">Read More</a></p>
            <% end %>
          </div>   
        </div>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-12">
      <p class="block-quote">The 100 Club of Chicago provides financial assistance, 
        access to resources and moral support for the families of first responders 
        who have lost their lives in the line of duty in and around the Chicagoland Area.</p>
    </div>
  </div>

  <br>

  <p id="program-head">Our Programs</p><div id="program-line"></div>

  <div class="allprograms">
    <div id="first_response">
      <%= image_tag("programsa.jpg") %>
      <p class="box-heading">First Response Assistance</p>
      <p class="summary-box">Financial support is provided to families of fallen responders within 24 hours and in the following weeks.</p>
      <div class="star-container">
        <div class="star">
          <span class="number">$10</span>
          <span class="what">Million</span>
          <span class="action">given to <br> families</span>
        </div>
      </div>
    </div>

    <div id="education">
      <%= image_tag("programsb.jpg") %>
      <p class="box-heading">Educational Assistance</p>
      <p class="summary-box">Grants and scholarships to the spouses and children of fallen first responders for higher education.</p>
      <div class="star-container">
        <div class="star">
          <span class="number">618</span>
          <span class="what">Dependents</span>
          <span class="action">supported <br> over the years</span>
        </div>
      </div>
    </div>

    <div id="gold-shield">
      <%= image_tag("programsc.jpg") %>
      <p class="box-heading">Gold Shield Partners</p>
      <p class="summary-box">Professional support in the areas of Health, Education, Job Training, and Insurance.</p>
      <div class="star-container">
        <div class="star">
          <span class="number">216</span>
          <span class="what">Families</span>
          <span class="action">benefited<br> from this</span>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="parallax-window" data-parallax="scroll" data-position="0px -270px" data-image-src="<%= asset_path 'comforting_hands.jpg' %>">
    <div class="helping_hands">
      <p id="jumbotronText">We can't do it without you</p>
      <p id="jumbotronTextMini">Join our membership programs to make a difference today</p>
      <div class="text-center">
        <a href="/members/new"><button type="button" class="btn btn-lg joinDonate"> Join us </button></a>
        <a href="/donations/new"><button type="button" class="btn btn-lg joinDonate"> Donate </button></a>
      </div>
    </div>
  </div>